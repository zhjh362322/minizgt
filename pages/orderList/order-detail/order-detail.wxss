.head-img {
  height: 150rpx;
}
.header {
  position: absolute;
  left: 50%;
  top: 120rpx;
  z-index: 1; 
  margin-left: -175rpx;
  background: rgba(255, 255, 255, .8);
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 350rpx;
  height: 100rpx;
  border: 1px solid #F5F5F5;
}
.vertical-line {
  height: 30rpx;
  border: 1px solid #999;
}
.order {
  margin: 80rpx auto 30rpx;
  display: flex;
  flex-direction: column;
  width: 90%;
  text-align: center;
  word-break: break-all;
}
.no {
  font-size: 36rpx;
}
.note {
  color: #999;
}
.panel {
  margin: 0 auto 100rpx;
}
.item {
  display: flex;
  flex-direction: column;
  padding: 10rpx 10rpx;
  border-bottom: 1px solid #F5F5F5;
}
.item text {
  line-height: 48rpx;
}
.item:last-child {
  border: none;
}
.addNode {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0;
}