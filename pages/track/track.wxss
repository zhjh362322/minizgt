page {
   background-color: #F5F5F5; 
}

.header {
  width: 100%;
  height: 500rpx;
}
.headImg {
  position: fixed;
  top: 0;
  width: 100%;
  height: 500rpx;
}

.search {
  position: fixed;
  top: 300rpx;
  left: 50%;
  margin-left: -45%;
  display: flex;
  align-items: center;
  width: 90%;
  height: 80rpx;
  background-color: #fff;
  border-radius: 2px;
}

.search view image {
  width: 48rpx;
  height: 48rpx;
}

.waybillNo {
  flex-grow: 1;
  padding-left: 20rpx;
  padding-right: 80rpx;
  height: 60rpx;
}

.iconGroup {
  /* display: none; */
  height: 48rpx;
  width: 144rpx;
}

.clear, .searchIcon, .line {
  display: inline-block;
}

.qrcode {
  /* display: none; */
  padding: 16rpx;
  width: 48rpx;
  height: 48rpx;
}

.line {
  margin: 0 15rpx 9rpx 10rpx;
  border-left: 1px solid #808080;
  height: 30rpx;
}


.title {
  display: block;
  padding: 20rpx 20rpx;
  font-size: 32rpx;
}
.order {
  margin-bottom: 20rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.searchTime {
  float: right;
}
.record {
  padding: 20rpx 20rpx;
  font-size: 28rpx;
  background-color: #F5F5F5;
  border-radius: 5rpx;
}
.orderNo {
  display: block;
  margin-bottom: 15rpx;
}