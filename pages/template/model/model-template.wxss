.model {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background-color: rgba(200, 200, 200, .4);
}
.model .main {
  margin: 30% auto;
  width: 80%;
  text-align: center;
  background-color: #FFF;
}
.model .title {
  display: block;
  padding-top: 30rpx;
}
.model .content {
  margin: 20rpx auto;
  padding: 5rpx;
  width: 90%;
  border: 1px solid #DEDBD6;
}
.model .btnGroup {
  border-top: 1px solid #DEDBD6;
}
.model .btnGroup .btn {
  display: inline-block;
  width: 49%;
  height: 70rpx;
  line-height: 70rpx;
}
.model .btnGroup .confirm {
  color: #0048FE;
  border-left: 1px solid #DEDBD6;
}