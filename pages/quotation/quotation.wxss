.head-img {
  margin-bottom: 50rpx;
}
.head-img image {
  height: 330rpx;
  width: 100%;
}
.search {
  position: absolute;
  top: 200rpx;
  margin: 20rpx 40rpx;
  display: flex;
  align-items: center;
  background-color: rgba(220, 220, 220, 0.8);
}
.btn-search {
  position: absolute;
  top: 70rpx;
  left: 50%;
  margin-left: -150rpx;
  width: 300rpx;
  height: 70rpx;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
  background-color: blue;
  border-radius: 50rpx;

}
.search input {
  flex-grow: 1;
  padding: 10rpx 5rpx;
  font-size: 32rpx;
  text-align: center;
  height: 60rpx;
}

.change {
  width: 48rpx;
  height: 48rpx;
}

.panel {
  margin: 15rpx auto;
  background-color: #fff;
}

.line {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.horizontal-line {
  margin: 0 10rpx;
  width: 48rpx;
  height: 48rpx;
}
.line-end {
  flex-grow: 1;
}

.price {
  color: red;
}

.send {
  display: flex;
  align-items: center;
}

.collect {
  flex-grow: 1;
}

.like {
  margin-right: 5rpx;
  width: 32rpx;
  height: 32rpx;
}

.btn {
  width: 110rpx;
  height: 50rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  background-color: blue;
  border-radius: 5rpx;
}
