.item {
  margin: 15rpx;
  padding: 15rpx;
  display: flex;
  border-bottom: 1px solid #F5F5F5;
}
.item label {
  line-height: 55rpx;
  width: 150rpx;
}
.item input, .item picker {
  flex-grow: 1;
  text-align: center;
}
.location {
  width: 32rpx;
  height: 32rpx;
}
.address {
  padding: 10rpx;
  height: 200rpx;
  border: 1px solid #F5F5F5;
}
.btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0;
}
.err {
  margin: 30rpx auto;
  width: 90%;
  color: #FF0000;
}