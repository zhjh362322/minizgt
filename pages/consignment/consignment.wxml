<view class="container">
  <form bindsubmit="sendOrder">
    <view class="shipper">
      <picker bindchange="chooseConsigner" range="{{consigner}}" range-key="companyName" name="consigner">
        <view class="sender">
          <text>{{sender}}</text>
        </view>
      </picker>
      <picker bindchange="chooseConsignee" range="{{consignee}}" range-key="companyName" name="consignee">
        <view class="receiver">
          <text>{{receiver}}</text>
        </view>
      </picker>
    </view>
    <view class="cargo">
      <view>
        <label>货物名称</label>
        <input name="cargoName" placeholder="货物名称"></input>
      </view>
      <view>
        <label>件数</label>
        <input name="num" placeholder="件数" bindblur="cost"></input>
      </view>
      <view>
        <label>重量</label>
        <input name="weight" placeholder="重量"></input>
      </view>
      <view>
        <label>体积</label>
        <input name="volume" placeholder="体积"></input>
      </view>
    </view>
    <block wx:for="{{error}}">
      <view class="err">
        <!-- <text>{{item.param}}</text> -->
        <text>{{item.msg}}</text>
      </view>
    </block>
    <view class="payable">
      <text>预估费用￥：</text>
      <input name="price" class="money" value="{{payable}}"></input>
      <button form-type="submit" type="primary" class="btn">发货</button>
    </view>
  </form>
</view>