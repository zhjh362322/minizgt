page {
  background-color: #F5F5F5;
  font-size: 32rpx;
}
.shipper {
  padding-bottom: 20rpx;
  background-color: #FFF;
}
.sender, .receiver {
  margin-bottom: 15rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #F5F5F5;
}
.cargo {
  padding: 5rpx 0 20rpx;
}
.cargo > view {
  padding: 15rpx;
  display: flex;
  align-items: center;
  background-color: #FFF;
}
.cargo input {
  flex-grow: 1;
  text-align: right;
}
.payable {
  position: absolute;
  bottom: 0; 
  display: flex;
  align-items: center;
  padding: 0 15rpx;
  width: 100%;
  background-color: #FFF;
}
.money {
   flex-grow: 1; 
}
.btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #FFF;
  font-size: 36rpx;
  border-radius: 0;
}