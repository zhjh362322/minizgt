<view class="panel">
  <view>
    <text>账号：</text>
    <text>{{uid}}</text>
  </view>
  <view>
    <text>姓名：</text>
    <text>{{name}}</text>
  </view>
  <view>
    <text>电话：</text>
    <text>{{cellphone}}</text>
  </view>
  <view>
    <text>邮箱：</text>
    <text>{{email}}</text>
  </view>
  <block wx:if="{{level == 1}}">
    <view>
      <text>公司名称：</text>
      <text>{{owner.company.name}}</text>
    </view>
    <view>
      <text>出险次数：</text>
      <text>{{owner.company.claim}}</text>
    </view>
    <view>
      <text>运单总数：</text>
      <text>{{owner.company.orderNum}}</text>
    </view>
  </block>
  <block wx:if="{{level == 2}}">
    <view>
      <text>所属公司：</text>
      <text>{{owner.plant.company.name}}</text>
    </view>
    <view>
      <text>出险次数：</text>
      <text>{{owner.plant.claim}}</text>
    </view>
    <view>
      <text>运单总数：</text>
      <text>{{owner.plant.orderNum}}</text>
    </view>
  </block>
</view>